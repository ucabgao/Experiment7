<div class="well">
  <div class="well-content">
    <h4>{{domain}}</h4>
    <h4>{{title}}</h4>
    {{description}}
    <br/>
  </div>
  <div class="row-fluid footer-box">
    <div class="aging activity created_at">
      <i rel="tooltip" title="{{timeAgo created_at}}" class="tooltips icon-time icon-1"></i>
    </div>

    {{#if link}}
    <div class="pull-right demo">
      <a href="{{link}}" target="_blank" class="btn btn-link">Site</a>
    </div>
    {{/if}}

    {{#unless hideAdd}}
      {{#isLoggedIn}}
      <div class="pull-right add">
        <a class="btn btn-link add">Add to Collections</a>
      </div>
      {{/isLoggedIn}}
    {{/unless}}
    
  </div>
</div>
