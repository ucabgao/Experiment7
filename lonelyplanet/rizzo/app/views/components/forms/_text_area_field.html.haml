= render :layout => 'components/forms/partials/field', :locals => { id: properties[:id], label: properties[:label], tooltip: properties[:tooltip] } do
  .input__container.js-input{ class: properties[:error] ? 'field__input--error' : nil }
    = ui_component('forms/text_area', properties: properties )
    - if properties[:error]
      .field__error.js-error
        = properties[:error]
