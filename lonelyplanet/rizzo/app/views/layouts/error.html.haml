!!! 5
%html
  %title Lost Traveller... | Lonely Planet
  :css
    html { background-color: #0A4F9C; color: white; font-weight: normal; position: relative; height: 100%; margin: 0; padding: 0; }
    html a { color: white; text-decoration: none; }
    html section { width: 600px; min-height: 150px; margin: auto; font-family: Arial, Helvetica, sans-serif; margin-top: 5em; position: relative; }
    html section h2 { font-size: 24px; left: 150px; top: 0; width: auto; right: 0; position: absolute; }
    html section h3 { clear: both; font-size: 15px; left: 150px; top: 50px; position: absolute; word-wrap: break-word; }
  - if @debug
    :css
      section#debug { background-color: black; width: 100%; font-size: 10px; position: absolute; left: 0; bottom: 0; height: 50%; overflow-x: none; overflow-y: scroll; }
      section#debug section#backtrace { font-size: 12px; position: relative; height: auto; width: auto; margin-top: 2em; }
      section#debug section#backtrace code { margin: 1em; display: inline-block; }

  %section
    %div.logo
    = yield

- if @debug
  %section#debug
    %section#backtrace
      %code.message= @exception.message
      %br
      %code.backtrace!= @exception.backtrace.join('<br><br/>')
